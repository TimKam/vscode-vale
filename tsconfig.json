{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            // We need the "dom" library because rxjs' typings depend on some
            // DOM types, see https://github.com/ReactiveX/rxjs/issues/1986
            "dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
